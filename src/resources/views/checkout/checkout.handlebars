    <main role="main">
        <!-- Block content - Đục lỗ trên giao diện bố cục chung, đặt tên là `content` -->
        <div class="container mt-4">
            <form method="POST" action="/order/store">
                <input type="hidden" name="kh_tendangnhap" value="dnpcuong">

                <div class="py-5 text-center">
                    <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
                    <h2>Thanh toán</h2>
                    <p class="lead">Vui lòng kiểm tra thông tin Khách hàng, thông tin Giỏ hàng trước khi Đặt hàng.</p>
                </div>

                <div class="row">
                    <div class="col-md-4 order-md-2 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Giỏ hàng</span>
                            <span class="badge badge-secondary badge-pill">2</span>
                        </h4>
                        <ul class="list-group mb-3">

                            {{#each carts}}
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 name="listProducts" class="my-0">{{this.title}}</h6>
                                    <input type="text" class="form-control" name="qtyProduct" id="qtyProduct"
                                    value="{{this.qty}}" readonly="" style="display: none">
                                    <small class="text-muted">{{this.price}} x {{this.qty}}</small>
                                </div>
                                <div>
                                <span class="text-muted">{{multi this.qty this.price}}</span>
                                </div>
                            </li>
                            {{/each}}

                            <li class="list-group-item d-flex justify-content-between">
                                <span>Tổng thành tiền</span>
                                <strong>
                                    <input type="text" class="form-control" name="total" id="total"
                                    value="{{total}}" readonly="">
                                </strong>
                            </li>
                            

                        </ul>

                    </div>
                    <div class="col-md-8 order-md-1">
                        <h4 class="mb-3">Thông tin khách hàng</h4>
                        
                        {{#with user}}
                        <div class="row">
                            <div class="col-md-12">
                                <label for="usernameOrder">Họ tên</label>
                                <input type="text" class="form-control" name="usernameOrder" id="usernameOrder"
                                    value="{{this.username}}" readonly="">
                            </div>
                            <div class="col-md-12">
                                <label for="kh_gioitinh">Giới tính</label>
                                <input type="text" class="form-control" name="kh_gioitinh" id="kh_gioitinh" value="{{this.sex}}"
                                    readonly="">
                            </div>
                            <div class="col-md-12">
                                <label for="addressOrder">Địa chỉ</label>
                                <input type="text" class="form-control" name="addressOrder" id="addressOrder"
                                    value="{{this.address}}" readonly="">
                            </div>
                            <div class="col-md-12">
                                <label for="phonenumberOrder">Điện thoại</label>
                                <input type="text" class="form-control" name="phonenumberOrder" id="phonenumberOrder"
                                    value="{{this.phonenumber}}" readonly="">
                            </div>
                            <div class="col-md-12">
                                <label for="emailOrder">Email</label>
                                <input type="text" class="form-control" name="emailOrder" id="emailOrder"
                                    value="{{this.email}}" readonly="">
                            </div>
                            <div class="col-md-12">
                                <label for="kh_ngaysinh">Ngày sinh</label>
                                <input type="text" class="form-control" name="kh_ngaysinh" id="kh_ngaysinh"
                                    value="{{this.dateofbirth}}" readonly="">
                            </div>
                        </div>
                        {{/with}}
                        
                        <hr class="mb-4">
                        <button class="btn btn-primary btn-lg btn-block" type="submit" name="btnDatHang">Đặt
                            hàng</button>
                    </div>
                </div>
            </form>
        </div>
    </main>