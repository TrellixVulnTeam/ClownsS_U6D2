<section class="bg-blue-100">
    <div class="tw-container py-8 md:py-16 ml-10"><span
            class="text-xl md:text-3xl lg:text-4xl tracking-wider font-bold capitalize text-blue-700"><a
                href="/">Home</a> / </span><span
            class="text-xl md:text-3xl lg:text-4xl tracking-wider font-bold capitalize text-blue-900"><span>History Order</span></span>
    </div>
</section>
<div class="customer-table-wrap">
    <div class="orderlist">
        <p class="title-detail" style="text-align: center;">Lịch sử đơn hàng</p>
        <div class="table-responsive-overflow">
            <div class="table-responsive">
                <table class="table table-customers">
                    <thead>
                        <tr>
                            <th class="order_number text-center">Mã đơn hàng</th>
                            <th class="date text-center">Ngày đặt</th>
                            <th class="total text-right">Thành tiền</th>
                            <th class="fulfillment_status text-center">Trạng thái đơn hàng</th>

                        </tr>
                    </thead>
                    <tbody>

                        {{#each orders}}
                        <tr class="odd ">
                            <td class="text-center"><a href="/order/{{this._id}}"
                                    title="">{{this._id}}</a></td>
                            <td class="text-center"><span>{{this.createdAt}}</span></td>
                            <td class="text-right"><span class="total money">{{this.total}}</span></td>
                            <td class="text-center"><span class="status_fulfilled">{{this.status}}</span></td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>