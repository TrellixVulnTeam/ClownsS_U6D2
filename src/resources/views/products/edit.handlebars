<div class="mt-4">
    <h3 class="tracking-wider font-bold text-4xl md:text-4xl">Sửa sản phẩm</h3>
    <br>
    <form method="POST" action="">
        <div class="form-group">
            <label for="name" class="form-label">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{product.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="price" class="form-label">Giá sản phẩm</label>
            <input type="text" class="form-control" value="{{product.price}}" id="price" name="price">
        </div>
        <div class="form-group">
            <label for="description" class="form-label">Mô tả</label>
            <input type="text" class="form-control" value="{{product.description}}" id="description" name="description">
        </div>
        <div class="form-group">
            <label for="img" class="form-label">Ảnh của sản phẩm</label>
            <input type="text" class="form-control" value="{{product.img}}" id="img" name="img">
        </div>
        <div class="form-group">
            <label for="code" class="form-label">Mã sản phẩm</label>
            <input type="text" class="form-control" value="{{product.code}}" id="code" name="code">
        </div>
        <div class="form-group">
            <label for="brand" class="form-label">Hãng sản phẩm</label>
            <input type="text" class="form-control" value="{{product.brand}}" id="brand" name="brand">
        </div>
        <div class="form-group">
            <label for="category" class="form-label">Loại sản phẩm</label>
            <input type="text" class="form-control" value="{{product.category}}" id="category" name="category">
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>