<div class="mt-4">
    <div class="row">

        {{#each products}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-product-item" >
                <a href="/products/{{this.slug}}">
                <img src="{{this.img}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/products/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.price}}</p>
                    <br>
                    <a href="#" class="btn btn-primary">Mua h√†ng</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>