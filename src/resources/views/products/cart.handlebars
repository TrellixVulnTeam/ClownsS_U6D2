<div class="tw-container">
  <article class="hidden lg:block py-10">
    <div
      class="grid text-center"
      style="grid-template-columns: 1fr 1fr 1fr 1fr auto;"
    >
      <h5>
        Tên mặt hàng
      </h5>
      <h5>
        Giá
      </h5>
      <h5>
        Số lượng
      </h5>
      <h5>
        Tổng tiền
      </h5>
      <span class="w-8 h-8"></span>
    </div>
    <hr class="mt-6" />
  </article>

    {{#each carts}}
    <article class="hidden lg:block py-10">
    <div
      class="grid text-center"
      style="grid-template-columns: 1fr 1fr 1fr 1fr auto;"
    >
      <h5>
        {{this.title}}
      </h5>
      <h5>
        {{this.price}}
      </h5>
      <h5>
        {{this.qty}}
      </h5>
      <h5>
        {{multi this.qty this.price}}
      </h5>
      <span class="w-8 h-8"></span>
    </div>
    </article>
    <hr class="mt-10" />
    {{/each}}

  <div class="flex justify-between py-8">
    <a class="btn-sm w-max bg-blue-500 text-white text-bold" href="/products">
      Tiếp tục mua sắm
    </a>
    <button class="btn-sm font-bold text-red-900 bg-red-300">
      Xóa toàn bộ giỏ
    </button>
  </div>
  <section class="flex justify-center lg:justify-end">
    <div class="w-full md:w-auto">
      <article class="md:border px-4 py-2 md:px-12 md:py-6">
        <h6 class="grid" style="grid-template-columns: 200px 1fr;">
          Tổng tiền:
          <span>
            {{total}}
          </span>
        </h6>
        <h6 class="grid" style="grid-template-columns: 200px 1fr;">
          Phí ship:
          <span>
            {{ship}}
          </span>
        </h6>
        <hr class="my-4" />
        <h4 class="grid" style="grid-template-columns: 200px 1fr;">
          Tổng hóa đơn:
          <span>
            {{sum total ship}}
          </span>
        </h4>
      </article>
      <div class="tw-container text-center py-20">
        <a class="mt-5 btn-sm w-max mx-auto" href="/checkout">
          <h3>
            Thanh toán
          </h3>
        </a>
      </div>
    </div>
  </section>
</div>
